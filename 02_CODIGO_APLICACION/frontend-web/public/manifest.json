    "utilities"
  ],
  
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Ir al dashboard principal",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Nuevo FRI",
      "short_name": "Nuevo FRI",
      "description": "Crear nuevo formulario FRI",
      "url": "/formularios/nuevo",
      "icons": [
        {
          "src": "/icons/shortcut-form.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Reportes",
      "short_name": "Reportes",
      "description": "Ver reportes y analytics",
      "url": "/reportes",
      "icons": [
        {
          "src": "/icons/shortcut-reports.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Datos",
      "short_name": "Datos",
      "description": "Gestión de datos",
      "url": "/datos",
      "icons": [
        {
          "src": "/icons/shortcut-data.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://anm-fri.ctglobal.com.co"
    }
  ],
  
  "prefer_related_applications": false,
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "file_handlers": [
    {
      "action": "/formularios/importar",
      "accept": {
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/vnd.ms-excel": [".xls"],
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "/icons/file-handler.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+anmfri",
      "url": "/abrir?url=%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": ["window-controls-overlay", "minimal-ui"],
  
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9",
  
  "features": [
    "offline-support",
    "push-notifications",
    "background-sync",
    "file-handling",
    "accessibility",
    "responsive-design"
  ],
  
  "permissions": [
    "storage",
    "notifications",
    "background-sync"
  ],
  
  "gcm_sender_id": "103953800507",
  
  "share_target": {
    "action": "/compartir",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            "application/vnd.ms-excel",
            "text/csv",
            "application/pdf"
          ]
        }
      ]
    }
  },
  
  "note_taking": {
    "new_note_url": "/formularios/nuevo"
  },
  
  "handle_links": "preferred",
  
  "id": "anm-fri-system",
  
  "capture_links": "existing-client-navigate"
}