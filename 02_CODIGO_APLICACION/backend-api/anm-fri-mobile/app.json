{
  "expo": {
    "name": "TU MINA",
    "slug": "anm-fri-mineria",
    "scheme": "anm-fri",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anm.frimineria",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "La app necesita tu ubicación para registrar la producción minera",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "La app necesita tu ubicación para registrar la producción minera",
        "NSCameraUsageDescription": "La app necesita acceso a la cámara para tomar fotos de la mina"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2E7D32"
      },
      "package": "com.anm.frimineria",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir a ANM FRI usar tu ubicación para registrar la producción minera."
        }
      ]
    ]
  }
}